# ==========================================================
# CHECKBOX Y RADIO BUTTON
# ==========================================================
style "lumina-toggle" {
    fg[NORMAL] = "#E0E0E0"
    bg[NORMAL] = "#2D2A32"
    fg[PRELIGHT] = "#FFFFFF"
