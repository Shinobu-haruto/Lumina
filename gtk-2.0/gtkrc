# ==========================================================
# PALETA DE COLORES (ajustar según Lumina)
# ==========================================================
style "lumina-colors" {
    fg[NORMAL] = "#E0E0E0"
    bg[NORMAL] = "#2D2A32"

    fg[PRELIGHT] = "#FFFFFF"
    bg[PRELIGHT] = "#3A3740"

    fg[ACTIVE] = "#FFFFFF"
    bg[ACTIVE] = "#4B4650"

    fg[SELECTED] = "#FFFFFF"
    bg[SELECTED] = "#5A5360"

    text[NORMAL] = "#E0E0E0"
    text[SELECTED] = "#FFFFFF"
}

# ==========================================================
# VENTANAS PRINCIPALES
# ==========================================================
style "lumina-window" {
    bg[NORMAL] = "#2D2A32"
    fg[NORMAL] = "#E0E0E0"
    xthickness = 1
    ythickness = 1
}

class "GtkWindow" style "lumina-window"

# ==========================================================
# HEADERBAR / TITLEBAR
# ==========================================================
style "lumina-header" {
    bg[NORMAL] = "#2D2A32"
    fg[NORMAL] = "#E0E0E0"
}

widget "*GtkWindow*GtkToolbar" style "lumina-header"
widget "*GtkWindow*GtkMenuBar" style "lumina-header"

# ==========================================================
# BOTONES
# ==========================================================
style "lumina-button" {
    fg[NORMAL] = "#E0E0E0"
    bg[NORMAL] = "#2D2A32"

    fg[PRELIGHT] = "#FFFFFF"
    bg[PRELIGHT] = "#3A3740"

    fg[ACTIVE] = "#FFFFFF"
    bg[ACTIVE] = "#4B4650"

    xthickness = 1
    ythickness = 1
    font_name = "Sans Bold 10"
}

class "GtkButton" style "lumina-button"

# ==========================================================
# ENTRIES / CAMPOS DE TEXTO
# ==========================================================
style "lumina-entry" {
    fg[NORMAL] = "#E0E0E0"
