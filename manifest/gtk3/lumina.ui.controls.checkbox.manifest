      check {
        min-height: 1em;
        min-width: 1em;
        border-radius: 0.25em;
        border: 0.125em solid @lumina_text_secondary;
        background-color: transparent;
        margin: 0.25em;
        transition: all 200ms cubic-bezier(0.4, 0, 0.2, 1);
}



      check:checked {
        background-color: @lumina_primary;
        border-color: @lumina_primary;
        background-size: 0.875em;
        background-image: url("assets/check.svg");
        background-repeat: no-repeat;
        background-position: center;
}



      check:hover {
        border-color: @lumina_primary;
        box-shadow: 0 0 0 0.625em alpha(@lumina_primary, 0.1);
}



      radio {
        min-height: 1.25em;
        min-width: 1.25em;
        border-radius: 9999px; 
        border: 0.125em solid @lumina_text_secondary;
        background-color: transparent;
        background-position: center;
        background-repeat: no-repeat;
        transition: all 200ms cubic-bezier(0.4, 0, 0.2, 1);
        margin: 0.25em;
}



    radio:checked {
        border-color: @lumina_primary;
        background-image: radial-gradient(circle, @lumina_primary 50%, transparent 60%);
        background-size: 100% 100%;
}



    radio:hover {
        border-color: @lumina_primary;
        box-shadow: 0 0 0 0.625em alpha(@lumina_primary, 0.1);
}



    radio:focus {
        box-shadow: 0 0 0 0.125em @lumina_bg, 0 0 0 0.25em @lumina_primary;
}



    radio:active, check:active {
        transform: scale(0.9);
}
