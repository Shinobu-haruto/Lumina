[general]
name=Lumina
button_layout=O|HMC
border_width=2
handle_width=8
title_font=Sans Bold 10
active_opacity=1.0
inactive_opacity=0.95
border_radius=6

[colors]
# Fondo del titlebar
active_bg_color=#2D2A32      ; @lumina_bg
inactive_bg_color=#2D2A32
# Bordes de ventana
active_border_color=#C8C8C8  ; @lumina_outline
inactive_border_color=#A0A0A0
# Texto del t√≠tulo
active_title_color=#E0E0E0    ; @lumina_text
inactive_title_color=#A0A0A0  ; @lumina_text_secondary
# Botones de ventana (cerrar, minimizar, maximizar)
button_fg_active=#E0E0E0
button_bg_active=#3A3740
button_fg_inactive=#A0A0A0
button_bg_inactive=#2D2A32
# Hover / Prelight
button_fg_hover=#FFFFFF
button_bg_hover=#4B4650
# Presionado
